body {
  font-family: 'Open Sans', sans-serif;
  color: #402b15;
}

.banner_box{
  background-color: #fefefd;
  width: 970px;
  height: 590px;
  margin-top: -30px;
  margin-bottom: 40px;
  box-shadow: 2px 2px 2px #ccc;
}

.banner_image{
  position: relative;
  z-index: 10;
  float: left;
  margin-top: -630px;
  margin-left: 15px;
}

.hp_heading1{
  font-family: 'Lobster', cursive;
  position: relative;
  z-index: 10;
  float: left;
  margin-top: -355px;
  margin-left: 35px;
  font-weight: 700;
  color: white;
  font-size: 38px;
  line-height: 50px;
  width: 580px;
  text-shadow: 1px 1px 1px #000;
}

.hp_heading2{
  position: relative;
  z-index: 10;
  float: left;
  margin-top: -80px;
  margin-left: 35px;
  font-weight: 600;
  color: #402b15;
  font-size: 18px;
}

#join_button{
  /*reset style*/
  border: none;
  background: #00B6FF;
  color: #fff;

  /*custom style*/
  background: none repeat scroll 0 0 #6F8E04;
  border: 1px solid #606D03;
  border-radius: 10px 10px 10px 10px;
  color: #FFFFFF;
  cursor: pointer;
  display: inline-block;
  float: left;
  font-size: 24px;
  font-weight: 700;
  height: 35px;
  letter-spacing: 0.005em;
  margin-left: 35px;
  margin-top: -230px;
  opacity: 0.85;
  padding-top: 18px;
  position: relative;
  text-align: center;
  width: 171px;
  z-index: 10;

  box-shadow: 0.05em 0.05em 0.25em #333333, 0 0 0.005em #999999 inset;
  line-height: 18px;
  margin-bottom: 0;
  text-shadow: 0 0.05em 0.075em #333333;
  vertical-align: middle;
}

span.emphasis_heading{
  font-weight: 700;
  color: #738c21;
  font-family: 'Lobster', cursive;
}

.three_column{
  width: 270px;
  background-color: white;
  float: left;
  padding: 15px;
  box-shadow: 2px 2px 2px #ccc;
}

.column_heading{
  width: 270px;
  font-family: 'Lobster', cursive;
  font-size: 26px;
  color: #402b15;
  margin-left: 10px;
}

.feast_title{
  font-weight: 600;
  font-size: 18px;
  color: #738c21;
  float: left;
  margin-top: 10px;
  margin-bottom: 10px;
}

a.feast_title:visited{color: #738c21;}

.see_more_link{
  color: #c54e28;
  font-weight: 400;
  font-style: italic;
  text-decoration: underline;
}
a.see_more_link{color: #c54e28;}

h1.feastfordays{
  font-family: 'Lobster', cursive;
  font-size: 40px;
  color: #738c21;
}

.page-title{
  color: #402b15;
  font-size: 56px;
  font-weight: 300;
  text-align: center;
  margin-bottom: 40px;
}

.section-title{
  color: #402b15;
  font-size: 36px;
  font-weight: 300;
  text-align: center;
  margin-bottom: 30px;
}

.banner-title{
  position: relative;
  z-index: 1;
  color: #7c891e;
  font-size: 30px;
  text-align: center;
  font-style: italic;
}

.steps-title{
  position: relative;
  z-index: 1;
  color: #515a0e;
  font-size: 30px;
  font-weight: 300;
  text-align: center;
  margin-bottom: 20px;
}

.steps-paragraph{
  color: #282828;
  font-size: 13px;
  line-height: 22px;
}

.box{
  width: 240px;
  height: 280px;
  float: left;
  text-align: center;
}

.row{
  float: left;
  margin-top: 30px;
  position: relative;
  z-index: 1;
}

p.quote#feastfordays{
  color: #7BBCBD;
  font-size: 20px;
  font-weight: bold;
  line-height: 1.3;
  margin-left: 10px;
  text-align: left;
  margin-top: 20px;
  margin-bottom: 20px;
}


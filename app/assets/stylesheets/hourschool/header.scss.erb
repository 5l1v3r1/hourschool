@import 'hourschool/variables';

.logo{
  position: relative;
  float: left;
  width: 77px;
  height: 76px;
  margin-bottom: 15px;

  &.hourschool{background: url( <%= asset_path 'v3/logo-black.png' %> );}
}

/*NAV*/

ul.main-nav{
  float: right;
  margin-top: 30px;
  position: relative;
  z-index: 1001;
}

li a.main-nav{
  @include hourschool-heading;
  letter-spacing: 2px;
  font-size: 11px;
  color: black;
  &:visisted{color: black;}
  &:hover{color: black; text-decoration: none;}
  &.main-nav-active {
    border-top: 3px solid black;
    padding-left: 0px 10px; }
  &.main-nav-inactive {
    padding: 0px 10px; }
}

#homepage a.main-nav{
  color: black;
  &:visisted{color: black;}
  &:hover{color: black;}
}

.nav-heading{
  font-weight: normal;
  font-weight: 700;
  font-size: 13px;
  @include hourschool-heading;
  color: white;
  letter-spacing: 0.15em;
}

a.nav-heading{color: white; text-decoration: none;}
a:visited.nav-heading{color: white; text-decoration: none;}


a:hover.dropdown-toggle.main-nav{
  background-color: transparent;
  color: black;
  border-top: 3px solid black;
  border-radius: 0px;
}

a:hover.dropdown-toggle.main-nav.exception{
  background-color: transparent;
  color: black;
  border-top: 3px solid white;
  border-radius: 0px;
}

#homepage a.main-nav:hover{
  color: black;
  border-top: 3px solid black;
}

#homepage a.main-nav:hover.exception{
  color: black;
  border-top: 3px solid white;
}

.nav-tabs .open .dropdown-toggle, .nav-pills .open .dropdown-toggle, .nav > li.dropdown.open.active > a:hover {
  background-color: white;
  color: black;
}

.nav-tabs .open .dropdown-toggle, .nav-pills .open .dropdown-toggle, .nav > li.dropdown.open.active > a:hover #homepage{
    background-color: transparent;
    color: black;
  }

li.dropdown-menu-wrapper{
  background-color: black;
  padding: 10px;
  opacity: 0.8;
  margin-bottom: 5px;
  height: 60px;
  width: 200px;
}

.dropdown-menu-item{
  padding: 0px 0px 21px 10px;
  position: relative;
  z-index: 1000;
  margin-top: -75px;
}

.dropdown-menu.main-nav{
  background-color: transparent;
}

p.nav-description{
  font-size: 11px;
  margin-bottom: 0px;
  color: white;
  text-transform: none;
  font-weight: 400;
}



/*SUB-NAV*/

ul.sub-nav {
  @include hourschool-heading;
  background-color: #f0f0f0;
  padding: 10px;
  padding-right: 0px;
  padding-left: 10px;
  float: left;
  list-style: none;
  font-size: 12px;
  letter-spacing: 0.1em;}

li {
  &.sub-nav-active, &.sub-nav-inactive {
    float: left;
    margin-right: 10px;
    padding-bottom: 3px; }
  &.sub-nav-active {
    padding-left: 0px 10px; }
  &.sub-nav-inactive {
    padding: 0px 10px; }
  }


a {
  &.sub-nav-active {
    color: black; }
  &.sub-nav-inactive {
    color: #8f8f8f; }
  &.sub-nav-active:hover, &.sub-nav-inactive:hover {
    color: $hourschool-house-color; } }



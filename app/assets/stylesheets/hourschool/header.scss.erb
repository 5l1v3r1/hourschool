@import 'hourschool/variables';

#logo {
  position: relative;
  float: left;
  width: 77px;
  height: 76px;
  margin-bottom: 15px;
  background: url( <%= asset_path 'v3/logo-black.png' %> );
}

#homepage #logo{
  background: url( <%= asset_path 'v3/logo-white.png' %> );
}


/*NAV*/

ul.main-nav{
  float: right;
  margin-top: 30px;
  position: relative;
  z-index: 1001;
}

li a.main-nav{
  @include hourschool-heading;
  letter-spacing: 2px;
  font-size: 11px;
  color: black;
  &:visisted{color: black;}
  &:hover{color: black; text-decoration: none;}
  &.main-nav-active {
    border-top: 3px solid black;
    padding-left: 0px 10px; }
  &.main-nav-inactive {
    padding: 0px 10px; } 
}

#homepage a.main-nav{
  color: white;
  &:visisted{color: white;}
  &:hover{color: white;}
}

.nav-heading{
  font-weight: normal;
  font-weight: 700;
  font-size: 13px;
  @include hourschool-heading;
  color: #333;
  letter-spacing: 0.15em;
}

/*SUB-NAV*/

ul.sub-nav {
  @include hourschool-heading;
  float: left;
  list-style: none;
  font-size: 12px;
  letter-spacing: 0.1em;
  margin-bottom: 20px; }

li {
  &.sub-nav-active, &.sub-nav-inactive {
    float: left;
    margin-right: 10px;
    padding-bottom: 3px; }
  &.sub-nav-active {
    border-bottom: 3px solid $hourschool-house-color;
    padding-left: 0px 10px; }
  &.sub-nav-inactive {
    padding: 0px 10px; } 
  }
    

a {
  &.sub-nav-active {
    color: black; }
  &.sub-nav-inactive {
    color: #8f8f8f; }
  &.sub-nav-active:hover, &.sub-nav-inactive:hover {
    color: $hourschool-house-color; } }


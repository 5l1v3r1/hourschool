<div class="tabbable"> <!-- Only required for left/right tabs -->
  <ul class="nav nav-tabs" style="margin-bottom: 0px;">
    <li class="active"><a href="#tab1" data-toggle="tab" class="heading11">Missions</a></li>
    <li><a href="#tab2" data-toggle="tab" class="heading11">Events</a></li>
    <li><a href="#tab3" data-toggle="tab" class="heading11">Crew</a></li>
    <li><a href="#tab4" data-toggle="tab" class="heading11">Settings</a></li>
    <li><a href="#tab5" data-toggle="tab" class="heading11">Billing</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
      <div class="full-page white tab-border full">
        <div class="page-content">
          <div class="well">
            <%= link_to "Add a mission", new_mission_path, :class => "btn" %>
          </div>
          <% @account.missions.each do |mission| %>
            <div class="mission-divider">                    
              <%= image_tag(mission.photo.url(:stats)) if mission.photo.present? %>
              <div style="float: left; width: 648px; background-color: #ececed; height: 42px; border: 1px solid rgba(154, 149, 145, 0.5);">
                <div class="heading16 adelle" style="padding: 12px 0px 12px 12px"><%= link_to full_mission_title(mission).truncate(75), mission %></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div><!-- end tab1 -->
    <div class="tab-pane" id="tab2">
      <div class="full-page white tab-border full">
        <div class="page-content">
          <div class="well">
            <%= link_to "Add an event", new_course_path, :class => "btn" %>
          </div>
          <% @account.courses.each do |course| %>
            <%= course.title %><br>
          <% end %>
        </div>
      </div>
    </div><!-- end tab2 -->
    <div class="tab-pane" id="tab3">
      <div class="full-page white tab-border full">
        <div class="page-content">
          <div class="mission-tab-intro">
            <div class="heading14" style="width: 550px">These people have joined you in pursuing this mission.</div>
          </div><hr> 
          <% @account.users.each do |user| %>
            <div class="mission-divider">             
              <div class="crewman-photo">
                <% if user.photo.present? %>
                  <%= link_to_avatar(user, :thumb_large) %>
                <% else %>
                  <%= image_tag 'v2/Avatars_01_V1.png', :size => "125x125" %>
                <% end %>
              </div>
              <div class="crewman-description">
                <div style="font-weight: 700; float: left; margin-right: 10px"><%= link_to user.name, user %></div>
                <%if user.crewmanships.where(:role => "creator", :mission_id => @mission).last %>
                  <span class="label">Mission Creator</span>
                <% elsif user.crewmanships.where(:role => "explorer", :mission_id => @mission).last %>
                  <span class="label">Explorer</span>
                <% elsif user.crewmanships.where(:role => "guide", :mission_id => @mission).last  %>
                  <span class="label">Guide</span>
                <% elsif user.crewmanships.where(:role => "alumni", :mission_id => @mission).last  %>
                  <span class="label">Alumni</span>
                <% end %>
                <p><%= user.bio %></p>
              </div>           
            </div>
          <% end %>
        </div>
      </div>
    </div><!-- end tab3 -->
    <div class="tab-pane" id="tab4">
      <div class="full-page white tab-border full">
        <div class="page-content">
          <%= form_for @account do |f| %>
            <% if @account.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h2>

                <ul>
                <% @account.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <p>
              <%= f.label :name, "Organization Name", :class => "form-question" %><br />
              <%= f.text_field :name, :class => "form-short-with-margin" %><br><br>
            </p>

            <p>
              Your custom url is <%= @account.subdomain %>.hourschool.com<br />
              contact <%= mail_to 'hello@hourschool.com' %> if you'd like to change it.
            </p>

            <p>
              <%= f.label :description, "Description", :class => "form-question" %><br />
              <%= f.text_field :description, :class => "form-with-margin" %><br><br>
            </p>

            <p>
             <%= f.label :logo, 'Logo', :class => "form-question" %><br />
             <%= f.file_field :logo %>
            </p>

            <p>
             <%= f.label :photo, 'Banner Photo', :class => "form-question" %><br />
             <%= f.file_field :photo %>
            </p>

            <hr>
            <div class="control-group" style="margin-bottom:20px">
              <div class="controls">
                <label class="radio">
                  <%= f.radio_button :private, false %>
                  Promote my classes on the main hourschool.com site where anyone can view and attend.
                </label>
                <label class="radio">
                  <%= f.radio_button :private, true %>
                  Please keep my classes private, only the people I invite can view or attend classes.
                </label>
              </div>
            </div>

            <div class="control-group" style="margin-bottom:20px">
              <div class="controls">
                <label class="radio">
                  <%= f.radio_button :charge, true %>
                  Charge a member fee
                </label>
                <label class="radio">
                  <%= f.radio_button :charge, false %>
                  Membership is free
                </label>
              </div>
            </div>

            <div>
              <%= f.text_field :charge_amount, :class => "form-short-with-margin", :placeholder => "Membership per month" %>
            </div><br><br>

            <div class="control-group" style="margin-bottom:20px">
              <div class="controls">
                <label class="radio">
                  <%= f.radio_button :charge, true %>
                  Only members can register for event
                </label>
                <label class="radio">
                  <%= f.radio_button :charge, false %>
                  Everyone can register for event
                </label>
              </div>
            </div>

            <%= f.text_field :discount, :class => "form-short-with-margin", :placeholder => "Discount for member" %>

            <br><br><br>

            <div class="actions">
              <%= f.submit 'Save', :class => "btn" %>
            </div>
          <% end %>
        </div>
      </div>
    </div><!-- end tab4 -->
    <div class="tab-pane" id="tab5">
      <div class="full-page white tab-border full">
        <div class="page-content">
          Coming soon
        </div>
      </div>
    </div><!-- end tab5 -->

  </div><!-- end tab-content -->
</div><!-- end tabbable -->


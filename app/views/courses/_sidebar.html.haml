.sidebar-white
  .sidebar-content-white
    = "Class min. of #{@current_course.min_seats}"
    - if !@current_course.max_seats.blank?
      = ", max. of #{@current_course.max_seats}"
    %br
    %br
    - if !@current_course.active?
      - if @current_course.teacher == current_user
        %p= "This class has passed."
        = button_to "Teach this again!", new_course_path, :method => :get, :class => "register-class-button"
      - else
        %p= "This class has passed."
        = button_to "Request a new one", new_suggestion_path, :method => :get, :class => "register-class-button"
    - elsif !@current_course.max_seats.blank? && @current_course.students.size >= course.max_seats
      - if @current_course.teacher == current_user
        = "Yay! Your class is sold out!"
        = button_to "Edit class profile", edit_course_path(:id => @current_course.id), :method => :get, :class => "edit-class-button"
      - elsif @current_course.is_a_student?(current_user)
        .edit-class-button= "You're already registered"
      - else
        = "Class is full already!"
        = button_to "Request a new one", new_suggestion_path, :method => :get, :class => "register-class-button"
    - else
      - if @current_course.teacher == current_user
        = button_to "Edit class profile", edit_course_path(:id => @current_course.id), :method => :get, :class => "edit-class-button"
      - elsif @current_course.is_a_student?(current_user)
        .edit-class-button= "You're already registered"
      - else
        - if @current_course.nosignup.nil?
          - if current_user.nil? || @current_course.city.name == current_user.city
            = button_to "Register for this class", payment_preview_path(:id => @current_course.id), :method => :put, :class => "register-class-button"
          - else
            = button_to "Register for this class", payment_preview_path(:id => @current_course.id), :method => :put, :class => "register-class-button", :confirm => "You specified your location as #{current_user.city}. This class is in #{@current_course.city.name}! Are you sure you want to register for it?"
        - else @current_course.nosignup?
          - if current_user.nil? || @current_course.city.name == current_user.city
            = button_to "I'm interested", payment_preview_path(:id => @current_course.id), :method => :put, :class => "register-class-button"
          - else
            = button_to "I'm interested", payment_preview_path(:id => @current_course.id), :method => :put, :class => "register-class-button", :confirm => "You specified your location as #{current_user.city}. This class is in #{@current_course.city.name}! Are you sure you want to register for it?"


    .sidebar-block

      %table

        %tr
          %td.icon
            = image_tag "/images/v2/icon_calendar.png", :class => "class-details-icon-when"
          %td
            .class-details
              = course.date.strftime("%a %b %d, %Y")
            .class-sidebar-details
              = "#{course.time_range}"
              %br
        %tr
          %td.icon
            = image_tag "/images/v2/icon_location.png", :class => "class-details-icon-where"
          %td
            .class-details
              = course.place_name
            .class-sidebar-details
              = course.address

    .sidebar-block-last
      .sidebar-heading Moderator
      .class-attendance-block
        - if @current_course.teacher.photo.present?
          = image_tag(@current_course.teacher.photo.url(:thumb_small))
        - else
          = image_tag "/images/v2/Avatars_04_V1.png", :class => "avatar-medium"
        .class-details
          %a.profile-link
          = link_to "#{course.teacher.name}", user_path(course.teacher.id), :class => "profile-link"
        / .class-details
        /   %ul.noBullet
        /     %li.noBullet
        /       %img.class-details-icon-heart{:src => '/images/v2/StatusIcon_heart.png'}
        /     %li.noBullet
        /       %p.class-details-heart-number
        /         = course.votes_for
        %p.class-details
          - if course.experience.blank?
            = "#{course.teacher.bio}"
          - else
            = course.experience

      - if course.teacher != current_user
        %img.class-details-icon-email{:src => '../../../images/v2/icon_email.png'}
        = link_to "Contact moderator", contact_teacher_path(:id => course.id), :class => "contact-link"


    - if course.students.any?
      .sidebar-block-last
        - if @current_course.nosignup.blank?
          .sidebar-heading Attendees
        - else @current_course.nosignup?
          .sidebar-heading People interested
        .class-attendance-block
          - course.students.each do |student|
            %table
              %tr
                %td
                  = avatar_for(student, :photo_size => :thumb_small, :class => 'notBig', :size => '50x50')
                %td
                  = link_to student.name, user_path(student.id), :class => "profile-link"
            %br

        - if course.teacher == current_user
          %img.class-details-icon-email{:src => '../../../images/v2/icon_email.png'}
          = link_to "Contact attendees", contact_all_students_path(:id => course.id), :class => "contact-link"
    
      
    - if current_user && current_user.admin?
      .sidebar-block-last
        = link_to "Feedback form", feedback_path(:id => course.id)
      


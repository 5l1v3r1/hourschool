<%
   text        = local_assigns[:text]        || "Check out this class "
   url         = local_assigns[:url]         || request.url
   description = local_assigns[:description] || ''
%>

<table>
  <tr>
    <td>
      <a href="https://twitter.com/share"
         class="twitter-share-button"
         data-text="<%= text %>"
         data-url="<%= url %>"
         data-count="horizontal"
         data-via="hourschool">Tweet</a><script type="text/javascript" src="//platform.twitter.com/widgets.js"></script>
    </td>

    <td>
      <a href="http://www.tumblr.com/share/link?url=<%=u url %>&name=<%=u text %>&description=<%=u description %>"
         title="Share on Tumblr"
         style="display:inline-block;
                text-indent:-9999px;
                overflow:hidden;
                width:129px;
                height:20px;
                margin-left: -20px; margin-right: 20px;
                background:url('http://platform.tumblr.com/v1/share_3T.png') top left no-repeat transparent;">Share on Tumblr</a>
    </td>

    <td>
      <div class="fb-like"
           data-send="true"
           data-layout="button_count"
           data-width="450"
           data-href='<%= url %>'
           data-show-faces="false"></div>
    </td>
  </tr>
</table>


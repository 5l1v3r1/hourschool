%ul.searchFilter
  - if current_user && current_user.city != "Austin" && current_user.city != "San Francisco"
    %li
      .sidebar-heading My Location
      %li= link_to "#{current_user.city}", courses_browse_path(:city, :city => current_user.city) unless current_user.city == "Austin" || current_user.city == "San Francisco"
%ul.searchFilter
  %li
    .sidebar-heading Browse By City
  %li= link_to "All", courses_browse_path(:city, :city => "All")
  %li= link_to "Austin", courses_browse_path(:city, :city => "Austin")
  %li= link_to "San Francisco", courses_browse_path(:city, :city => "San Francisco")

%ul.searchFilter
  %li
    .sidebar-heading Browse By Time
  %li= link_to "Upcoming classes", "/learn"
  %li= link_to "Past classes", courses_browse_path(:past)

%ul.searchFilter
  %li
    .sidebar-heading Browse By Category
    - TAGS.each do |tg|
      %li= link_to "#{tg}", courses_browse_path(:tags, :tag => tg)



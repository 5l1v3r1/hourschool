<!-- Modal Layout for when a User tries to sign up for a course too far away -->
<%= render :layout => 'shared/page/modal', :locals => {:modal_class => 'preMissionSignupModal'} do %>
  <div id="signup">
    <p>
      <div class="sidebar-heading">
        Tell us why you are interested in this mission!
      </div>
    </p>

    <%= form_for(@pre_mission_signup, :remote => true) do |f| %>
    <% if @pre_mission_signup.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@pre_mission_signup.errors.count, "error") %> prohibited this pre_mission_signup from being saved:</h2>

        <ul>
        <% @pre_mission_signup.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <% if current_user %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
    <% else %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.text_field :email %>
      </div>
    <% end %>

    <%= f.text_field :mission, :value => params[:mission] %>

    <div class="field">
      <%= f.text_area :description, :class => "form-med-with-margin" %>
    </div>
    <div class="actions">
      <%= f.submit "Notify me when mission is launched!", :class => "button", :style => "background-color: #ff7733; width: 300px; margin-bottom: -10px" %>
    </div>
  </div>
  <div id="response" style="display:none;">
    <p>
      Congratulations! You've successfully pre-registered. We will notify you when this mission is live.
    </p>
  </div>
<% end %>


<% end %>

<!-- Show the modal window when someone clicks on a mission -->
<script type="text/javascript">
  $(document).ready( function(){
    $('.preMissionSignup').bind('click', function(){
      $('.preMissionSignupModal #signup').show();
      $('.preMissionSignupModal #response').hide();
      $('.preMissionSignupModal #pre_mission_signup_mission').val($(this).attr('data-mission'));
      $('.preMissionSignupModal').show();
      return false;
    })
  });
</script>


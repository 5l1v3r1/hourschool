= render :partial => "header"

.modal
  .welcome-header Contact teacher
  %img.modal-close{:src => '/images/v2/modal-close.png'}

  = form_tag nominate_send_path, :method => 'post' do
    = hidden_field_tag 'course_id', @course.id
    .form-question= "Message or question for the teacher of the #{@course.title} class:"
    = text_area_tag 'message', '', :class => 'form-tall'
    .page-section-float-left
      = submit_tag "Send message", :class => "send-message-button"

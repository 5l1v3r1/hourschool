<div class="modal hide" id="emailOrganizer">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Email event organizer</h3>
  </div>
  <%= form_tag course_organizer_contacts_path(@course), :method => 'post' do %>
  <%= hidden_field_tag 'id', @course.id %>
  <div class="modal-body">

    <% if !current_user %>
    <div class="field clearfix">
      Your email:
      <%= text_field_tag :messenger_email %>
    </div>
    <% end %>

    <div class="form-question">
      <%= "Message to #{@course.teacher.name} for the #{@course.title} class:" %>
      <%= text_area_tag 'message', '', :class => 'form-tall', :style => "width: 97%" %>
    </div>
  </div>
  <div class="modal-footer">
    <%= submit_tag "Send message", :class => "btn" %>
  </div>
  <% end %>
</div>
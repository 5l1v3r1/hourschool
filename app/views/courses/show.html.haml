.content
	= image_tag @course.photo.url
	%p
		%strong Title:
		= @course.title
	%p
		%strong Description:
		= @course.description
	%p
		%strong Price:
		= @course.price
	%p
		%strong Seats:
		= @course.seats
	%p
		%strong Date:
		= @course.date
	%p
		%strong Time:
		= @course.time
	%p
		%strong Place:
		= @course.place
	%p
		%strong City:
		= @course.city_id
	%p
		%strong Minimum:
		= @course.minimum

	/ %p
	/ 	= link_to "Edit", edit_course_path(@course)
	/ 	|
	/ 	= link_to "Destroy", @course, :confirm => 'Are you sure?', :method => :delete
	/ 	|
	/ 	= link_to "View All", courses_path
	- if current_user.is_teacher_for?(@course)
		= link_to "Edit", edit_course_path(@course)
		|
		= link_to "Destroy", @course, :confirm => 'Are you sure?', :method => :delete
	= link_to_function "Back", "history.back()"

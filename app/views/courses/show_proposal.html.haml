%head
  = include_yui_editor_if_used.html_safe

.page
  .page-content

    .page-section-float-left
    
    .form-question
      = "Proposal's Topic:"
    .form-question-tip
      = "#{@current_course.title}"

    .form-question
      = "Proposal's Teaser:"
    .form-question-tip     
      = "#{@current_course.teaser}"
      
    .form-question
      = "Teacher's name:"
    .form-question-tip
      = "#{@current_course.teacher.name}"

    .form-question
      = "Teacher's experience:"
    .form-question-tip
      = "#{@current_course.experience}"

    .form-question
      = "Date:"
    .form-question-tip     
      = "#{@current_course.date}"
      
    .form-question
      = "Time:"
    .form-question-tip     
      = "#{@current_course.time_range}"
          
    .form-question
      = "Location:"
    .form-question-tip     
      = "#{@current_course.place_name}"
        
      = button_to "Approve this course", approve_path(:id => @current_course.id), :class => "submit-proposal-button", :method => :put

      = button_to "Reject & Contact teacher", reject_proposal_path(:id => @current_course.id), :class => "submit-proposal-button", :method => :get




.page
  .page-content.vote-class.clearfix
    .vote-class-title
      .heading20-vote
        = @csuggestion.name
      .heading9-class
        = "Requested in: #{count_in_place_sentence(@csuggestion.voters_who_voted.map(&:city))}"
      %table
        %tr
          %td
            %img.view-more-arrow{:src => '/images/v2/arrow_orange_pointright.png'}
          %td  
            = link_to "I want to teach this class", new_course_path("req" => @csuggestion.id), :class => "vote-link"
        %tr
          %td
            %img.view-more-arrow{:src => '/images/v2/arrow_orange_pointright.png'}
          %td  
            = link_to "I want to nominate someone to teach this class", nominate_path("id" => @csuggestion.id), :class => "vote-link"
    .vote-class-number
      .heading35-vote
        %span{:id => "vote_count_#{@csuggestion.id}"}
          = "#{@csuggestion.votes_for}"
      .heading10-vote 
        = "people"
      %span{:id => "vote_link_#{@csuggestion.id}"}
        - if user_signed_in?
          - if !current_user.voted_on?(@csuggestion)
            = link_to "Vote", csvote_path("csid" => @csuggestion.id), :class => "vote-class-button"
          - else
            .voted-button
              = "Voted"
        - else
          = link_to_function "Vote", "alert('Please login to vote!')"

<%= render :partial => "home/header"%>
<div class="page">
	<div class="content">
	<div class= "heading25_ccc">
	<%  if resource_name.to_s == "member" %>
	<h2>Sign in with your work email</h2>
	<% else %>
	<h2> Sign in </h2>
	<% end%>
	</div>

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<div class="form-question">
		
		<%= f.label :email %><br />
		
		<%= f.email_field :email, :class => "form" %></div>

		<div class="form-question"><%= f.label :password %><br />
			<%= f.password_field :password , :class => "form"%></div>

			<% if devise_mapping.rememberable? -%>
			<div class="form-question"><%= f.label :remember_me %>
			<%= f.check_box :remember_me, :class => "form" %> </div>
			<% end -%>

			<div><%= f.submit "Sign in" %></div>
			<% end %>
			
			<%= render :partial => "devise/shared/links" %>
			
			<div>
			<%  if resource_name.to_s == "user" %>
			<h3> OR </h3>
			<%= link_to image_tag('fb_connect.jpg'), user_omniauth_authorize_path(:facebook) %>
			<p> Only takes few seconds </p>
			<% end %>
		</div>

	</div>
</div>
.sidebar
	.sidebar-content
		%ul.searchFilter
			%li
				.sidebar-heading Browse By City
		
			- SUPPORTED_CITIES.each do |sc|
				%li= link_to "#{sc}", '#', :remote => true
		%ul.searchFilter
			%li
				.sidebar-heading Browse By Time
			%li= link_to "Upcoming Classes", "#"
			%li= link_to "Past Classes", "#"
		%ul.searchFilter
			%li
				.sidebar-heading Browse By Category
			- TAGS.each do |tg|
				%li= link_to "#{tg}", tags_path("index"=>TAGS.index(tg))

	%hr#class    
	.sidebar-content
		.sidebar-heading Classes we like
		- @classes_we_like.each do |cl|
			.sidebar-block
				.heading13-class
					= link_to "#{cl.title}", cl
				.heading9-class 
					= "#{cl.date.day} #{Date::ABBR_MONTHNAMES[cl.date.month]}"
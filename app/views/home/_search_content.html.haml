- count = 0
- courses.each do |course|
  - count = count + 1
  - if count%3 == 0
    - className = "classBlock_last"
  - else
    - className = "classBlock"
  %div{:class => "#{className}"}
    - if course.photo.exists?
      = image_tag(course.photo.url(:small), :size => "190x120")
      %img.class-arrow{:src => '/images/v2/arrow_white_pointup.png'}
    - else
      = image_tag("/images/v2-courses/112_BakingBread.jpg")
      %img.class-arrow{:src => '/images/v2/arrow_white_pointup.png'}
    %br

      .class-description
        .heading13-class
          = link_to "#{course.title}", course
        %p= course.description.truncate(70) unless course.description.blank?
        .heading9-class
          = "#{course.seats_left} seats left"
          = "#{course.days_left} days from today"

.page-section-float-right
  %table.view-more
    %tr
      %td
        = will_paginate courses, :previous_label => "Prev"


<style type="text/css">

  a:hover.dropdown-toggle.main-nav{
    background-color: transparent;
    color: black;
    border-top: 3px solid black;
    border-radius: 0px;
  }

  #homepage a.main-nav:hover{
    color: black;
    border-top: 3px solid black;
  }

  a.nav-heading{
    color: white;
  }

  .nav-tabs .open .dropdown-toggle, .nav-pills .open .dropdown-toggle, .nav > li.dropdown.open.active > a:hover {
    background-color: white;
    color: black;
  }

  .nav-tabs .open .dropdown-toggle, .nav-pills .open .dropdown-toggle, .nav > li.dropdown.open.active > a:hover #homepage{
      background-color: transparent;
      color: black;
    }

  li.dropdown-menu-wrapper{
    background-color: black;
    padding: 10px;
    opacity: 0.8;
    margin-bottom: 5px;
    height: 60px;
    width: 200px;
  }

  .dropdown-menu-item{
    padding: 0px 0px 21px 10px;
    position: relative;
    z-index: 1000;
    margin-top: -75px;
  }

  .dropdown-menu.main-nav{
    background-color: transparent;
  }

  p.nav-description{
    font-size: 11px;
    margin-bottom: 0px;
    color: white;
  }

</style>

<div id="header">
  <div class="container_16">
    <%= link_to "", root_path, :id => "logo" %>

    <ul class="nav nav-pills main-nav">
      <li class="dropdown" id="menu5">
        <%= link_to "Learn", courses_browse_index_path, :class => "main-nav dropdown-toggle" %>
      </li>
      <li class="dropdown" id="menu5">
        <%= link_to "Teach", teach_path, :class => "main-nav dropdown-toggle" %>
      </li>
      <li class="dropdown" id="menu5">
        <%= link_to "HourSchool Pro", pro_path, :class => "main-nav dropdown-toggle" %>
      </li>
      <li class="dropdown" id="menu5">
        <%= link_to "Resources", resources_path, :class => "main-nav dropdown-toggle" %>
      </li>
      <li class="dropdown" id="menu5">
        <%= link_to "About", about_path, :class => "main-nav dropdown-toggle" %>
      </li>

      <% if current_user %>
        <li class="dropdown" id="menu1">
          <a class="dropdown-toggle main-nav" data-toggle="dropdown" href="#menu1">
            Me
          </a>
          <ul class="dropdown-menu pull-right" style="background-color: transparent; border: 0px; border-radius: 0px; box-shadow: 0 0px; width: 200px">
            <li class="dropdown-menu-wrapper"></li>
            <div class="dropdown-menu-item">
              <%= link_to "My Profile", '/dashboards/me', :class => "nav-heading", :style => "padding: 0px; font-weight: 700" %>
              <p class="nav-description">Keep track of what your steps and milestones.</p>
            </div>
            <li class="dropdown-menu-wrapper"></li>
            <div class="dropdown-menu-item">
              <%= link_to "Settings", edit_user_registration_path, :class => "nav-heading", :style => "padding: 0px; font-weight: 700" %>

    height: 60px;
    width: 200px;
  }

  .dropdown-menu-item{
    padding: 0px 0px 21px 10px; 
    position: relative; 
    z-index: 1000; 
    margin-top: -75px;
  }

  .dropdown-menu.main-nav{
    background-color: transparent;
  }

  p.nav-description{

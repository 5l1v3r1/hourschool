<style type="text/css">

  a:hover.dropdown-toggle.main-nav{
    background-color: transparent;
    color: black;
    border-top: 3px solid black;
    border-radius: 0px;
  }

  #homepage a.main-nav:hover{
    color: white;
    border-top: 3px solid white;
  }

  a.nav-heading{
    color: white;
  }

  .nav-tabs .open .dropdown-toggle, .nav-pills .open .dropdown-toggle, .nav > li.dropdown.open.active > a:hover {
    background-color: white;
    color: black;
  }

  .nav-tabs .open .dropdown-toggle, .nav-pills .open .dropdown-toggle, .nav > li.dropdown.open.active > a:hover #homepage{
      background-color: transparent;
      color: black;
    }

  li.dropdown-menu-wrapper{
    background-color: black;
    padding: 10px;
    opacity: 0.8;
    margin-bottom: 5px;
    height: 60px;
    width: 200px;
  }

  .dropdown-menu-item{
    padding: 0px 0px 21px 10px;
    position: relative;
    z-index: 1000;
    margin-top: -75px;
  }

  .dropdown-menu.main-nav{
    background-color: transparent;
  }

  p.nav-description{
    font-size: 11px;
    margin-bottom: 0px;
    color: white;
  }

</style>

<div id="header" style="height: 91px">
  <div class="container_16">

    <% if current_account.logo.present? %>
      <%= link_to image_tag(current_account.logo.url(:small)), explore_path %>
      <ul class="nav nav-pills main-nav">
    <% else %>
      <div style="margin-top: 29px; margin-bottom: 25px">
        <%= link_to current_account.name, explore_path, :class => "heading28", :style => "color: black" %>
      </div>

      <ul class="nav nav-pills main-nav" style="margin-top: -55px">
        <% end %>
        <li class="dropdown">
          <%= link_to "Classes", "/classes", :class => "main-nav dropdown-toggle" %>
        </li>
        <li class="dropdown">
          <%= link_to "Members", "/members", :class => "main-nav dropdown-toggle" %>
        </li>
        <li class="dropdown">
          <%= link_to "Blog", "/blog", :class => "main-nav dropdown-toggle" %>
        </li>
        <% if current_user %>
          <li class="dropdown" id="menu1">
            <a class="dropdown-toggle main-nav" data-toggle="dropdown" href="#menu1" style="background-color: #ccc">
              Me
            </a>
            <ul class="dropdown-menu pull-right" style="background-color: transparent; border: 0px; border-radius: 0px; box-shadow: 0 0px; width: 200px">
              <li class="dropdown-menu-wrapper"></li>
                <div class="dropdown-menu-item">
                  <%= link_to "My Profile", user_path(current_user), :class => "nav-heading", :style => "padding: 0px; font-weight: 700" %>
                  <p class="nav-description">All the classes you have attended and taught!</p>
                </div>
              <li class="dropdown-menu-wrapper"></li>
                <div class="dropdown-menu-item">
                  <%= link_to "Settings", edit_user_registration_path, :class => "nav-heading", :style => "padding: 0px; font-weight: 700" %>
                  <p class="nav-description">Update profile? Less emails? Not a problem!</p>
                </div>
              <% if current_user && current_account && Membership.find_by_account_id_and_user_id_and_admin(current_account.id, current_user.id, true) %>
              <li class="dropdown-menu-wrapper"></li>
                <div class="dropdown-menu-item">
                  <%= link_to "Admin Settings", edit_account_path(:admin), :class => "nav-heading", :style => "padding: 0px; font-weight: 700" %>
                  <p class="nav-description">Everything you need to keep growing your community!</p>
                </div>
              <% end %>
              <li class="dropdown-menu-wrapper"></li>
                <div class="dropdown-menu-item">
                  <%= link_to "Sign out", destroy_user_session_path, :class => "nav-heading", :style => "padding: 0px; font-weight: 700" %>
                  <p class="nav-description">Come back and visit soon!</p>
                </div>
            </ul>
          </li>
        <% else %>
          <li class="dropdown" id="menu5">
            <%= link_to "Login", new_user_session_path, :class => "main-nav dropdown-toggle" %>
          </li>
          <li class="dropdown" id="menu6">
            <%= link_to "Become a member", new_user_registration_path, :class => "main-nav dropdown-toggle", :style => "background-color: #ccc" %>
          </li>
        <% end %>

      </ul>

  </div><!-- /end .container_16 -->
</div><!-- /end #header -->


<script type="text/javascript">
  $('.dropdown-toggle').dropdown()
</script>



<p id="notice"><%= notice %></p>

<p>
  <%= image_tag(@mission.photo, :size => "960x360") if @mission.photo.present? %>
</p>

<p>
  <%= @mission.title %>
</p>

<p>
  <%= @mission.description %>
</p>

<p>
  <b>City:</b>
  <%= @mission.city.name %>
</p>

<p>
  <b>Topics:</b>
  <% @mission.topics.each do |topic| %>
    <%= topic.title %>, added by <%= topic.user.name %>
  <% end %>
</p>

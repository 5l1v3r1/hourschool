<p id="notice"><%= notice %></p>

<p>
  <%= image_tag(@mission.photo, :size => "960x360") if @mission.photo.present? %>
</p>

<p>
  <%= @mission.title %>
</p>

<p>
  <%= @mission.description %>
</p>

<p>
  <b>City:</b>
  <%= @mission.city.name %>
</p>

<hr>

<p>
  <b>Topics:</b>
  <%= button_to "Add New Topic", new_mission_topic_path(:mission_id => @mission), :method => :get %>
  <br>
  <% @mission.topics.each do |topic| %>
    <%= topic.title %>, added by <%= topic.user.name %>, <%= button_to "Organize something for this topic", new_course_path(:topic_id => topic), :method => :get %>
    <br>
  <% end %>
</p>

<hr>

<p>
  <%= render :partial => "missions/show/comments", :locals => {:mission => @mission} %>
</p>

<hr>

<p>
  <b>Events:</b><br>
    <% @courses.each do |course| %>
    <%= link_to course.title, course %><br>
  <% end %>
  <%= button_to "Create New Event", new_course_path(:mission_id => @mission), :method => :get %>
</p>
<hr>

<p>
  <b>Crew:</b><br>
  <% @users.each do |user| %>
    <%= user.name %><br>
  <% end %>
</p>



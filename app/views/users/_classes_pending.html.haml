- count = 0
- pending.each do |course|
  - count = count + 1
  - if count%3 == 0
    - className = "classBlock_last"
  - else
    - className = "classBlock"
  %div{:class => "#{className}"}
    - if current_user.admin?
      = link_to image_tag("/images/v2-courses/DefaultClassPics_Pending_Orange.png"), proposal_path(:id => course.id)
    - else 
      = link_to image_tag("/images/v2-courses/DefaultClassPics_Generic.png"), edit_course_path(course.id)
      %img.class-arrow{:src => '/images/v2/arrow_white_pointup.png'}
      = button_to "Edit my proposal", edit_course_path(course.id), :class => "complete-class-button", :method => :get
    .class-description
      .heading13-class 
        = "#{course.title}"
      %p= course.teaser.truncate(70).html_safe

- count = 0
- if classes_teaching.blank?
  - if current_user == @user
    = "Aw..you haven't moderated any meetings yet."
    = link_to "Moderate your first one!", new_course_path, :class => "pagenote-link"
  - else
    = "#{@user.name} has not moderated any meetings yet!"
- classes_teaching.each do |c|
  - count = count + 1
  - if count%3 == 0
    - className = "classBlock_last"
  - else
    - className = "classBlock"
  %div{:class => "#{className}"}
    - if c.photo.exists?
      = link_to (image_tag(c.photo.url(:small), :size => "190x120")), c
      %img.class-arrow{:src => '/images/v2/arrow_white_pointup.png'}
    - else
      - if !c.categories.first.nil?
        = link_to image_tag("#{DEF_IMAGES[c.categories.first.name]}"), c
      - else
        = link_to image_tag("/images/v2-courses/DefaultClassPics_Generic.png"), c
      %img.class-arrow{:src => '/images/v2/arrow_white_pointup.png'}
    %br
      .class-description
        .heading13-class 
          = link_to c.title.truncate(45), c
        %p= c.teaser.truncate(49) unless c.teaser.blank?
      .class-note
        .heading9-class 
          - if c.days_left > 0
            = "#{ c.days_left } days from today"
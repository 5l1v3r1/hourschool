.page
  .page-content

    .page-section-float-left
      %ul.sub-nav
        %li.sub-nav-active
          %a.sub-nav-active(href="/profile") Classes
        %li.sub-nav-inactive
          %a.sub-nav-inactive(href="/profile-suggest") Suggestions
        - if current_user.is_admin?
          %li.sub-nav-inactive 
            %a.sub-nav-inactive(href="/profile-pending") Admin


    .page-section-float-left  
      - if @approved_courses.any? || @pending_courses.count != 0 || !current_user.photo.exists?
        .notification-center
          #notification-header Notifications 
          - if @approved_courses.any?
            %img{:src => '/images/v2/notification_bolt.png'}
            = "Your class has been approved! Go fill out the profile."
            %br
            %br
          - if @pending_courses.count != 0
            %img{:src => '/images/v2/notification_bolt.png'}
            = "Your proposal(s) has been submitted successfully. We'll get back to you very soon. In the meantime, check out our teacher's handbook."
            %br
            %br
          - if !current_user.photo.exists?
            %img{:src => '/images/v2/notification_bolt.png'}
            = "Upload a profile pic"
      - else
        /do nothing



      .welcome-header Upcoming classes attending
      %img.greyheader_half{:src => '/images/v2/greyheader_half.png'}
      .classRow

        = render :partial => "classes_top_three", :locals => {:classes_this_week => current_user.top_three_recent_classes_as_student}

    .page-section-float-left
      .welcome-header Upcoming classes teaching
      %img.greyheader_half{:src => '/images/v2/greyheader_half.png'}
      .classRow
        = render :partial => "classes_top_three", :locals => {:classes_this_week => current_user.top_three_recent_classes_as_teacher}
        = render :partial => "classes_approved", :locals => {:pending => current_user.approved_classes}



<div class="signup_wizard">
 

 <h2>Create a new Hourschool password</h2>

  <% @user.errors.each do |error, msg| %>
    <p class="error"><%= "#{error}: #{msg}" %></p>
  <%- end -%>

  <%= form_for @user, :url => wizard_path, :method => :put, :html => {:class => 'inset', :id => 'form-signup'} do |f| %>
    <%=  f.password_field :password , :placeholder => "Password" %>
    <%=  f.password_field :password_confirmation , :placeholder => "Confirm Password" %>
    <%=  f.submit "Done", :class => "button-submit" %>
  <% end %>

  <%= link_to "skip", wizard_path(@next_step) %>

</div>